{
  "manifest_version": 3,
  "name": "URL Breakdown",
  "version": "1.0",
  "description": "Extracts and displays the components of the current tab's URL.",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
